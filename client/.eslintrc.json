{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "react-app/jest",
    "../.eslintrc.json",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  },

  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": 0,
    "import/no-anonymous-default-export": "off"
  }
}

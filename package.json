{
  "name": "kummmerkasten",
  "private": "true",
  "version": "1.0.0",
  "description": "Gesellenstueck ",
  "main": "server.js",
  "scripts": {
    "build": "cd client && npm run build && npm run build-storybook",
    "storybook": "cd client && start-storybook -p 6006 -s public",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettify": "prettier --write .",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gesellenstueck/Kummerkasten.git"
  },
  "author": "Lucas Naas, Marie Gross",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gesellenstueck/Kummerkasten/issues"
  },
  "homepage": "https://github.com/Gesellenstueck/Kummerkasten#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
